# ================================================================
# 极聊（商用版）环境配置文件
# 复制此文件为 .env 并填写真实配置
# ================================================================

# ── 应用 ───────────────────────────────────────────────────────
APP_NAME="极聊（商用版）"
APP_DEBUG=false
APP_URL=https://yourdomain.com

# ── 数据库 ─────────────────────────────────────────────────────
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=jiliao
DB_USER=jiliao_user
DB_PASS=your_strong_password_here
DB_CHARSET=utf8mb4

# ── Session ────────────────────────────────────────────────────
SESSION_LIFETIME=86400
SESSION_NAME=JILIAO_SESS

# ── WebSocket ──────────────────────────────────────────────────
WS_HOST=0.0.0.0
WS_PORT=9501
WS_PROCESSES=4
WS_PUBLIC_URL=wss://yourdomain.com/ws

# ── 文件上传 ───────────────────────────────────────────────────
UPLOAD_MAX_IMAGE_MB=10
UPLOAD_MAX_FILE_MB=50
UPLOAD_FORBIDDEN_EXT=exe,sh,bat,cmd,ps1,php,phtml,asp,aspx,jsp

# ── SMTP 邮件 ──────────────────────────────────────────────────
MAIL_ENABLE=false
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=noreply@example.com
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com
SMTP_ENCRYPTION=ssl

# ── 安全 ───────────────────────────────────────────────────────
CAPTCHA_ENABLE=true
CAPTCHA_SLIDER=true
RATE_LIMIT_PER_MIN=120
LOGIN_MAX_FAIL=5
LOGIN_LOCK_SECONDS=1800
